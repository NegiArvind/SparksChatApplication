<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/otherShimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/others_message"
            android:background="@drawable/others_message"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:textSize="18sp"
            android:text="Others message loading"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:id="@+id/others_imageview"
            android:scaleType="fitXY"
            android:padding="5sp"
            android:background="@drawable/others_message"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:textSize="18sp"
            android:text="How are you doing? This is a long message that should probably wrap."
            />

    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>
